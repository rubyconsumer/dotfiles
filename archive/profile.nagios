function restart-nagios() {
  /opt/csw/nagios/bin/nagios -v  /opt/csw/nagios/etc/nagios.cfg && \
  kill `cat /opt/csw/nagios/var/nagios.lock` && \
  /opt/csw/nagios/bin/nagios -d /opt/csw/nagios/etc/nagios.cfg
}
